#include <stdio.h>

void selectionSort(float arr[], int n) {
    int i, j, maxIdx;
    float temp;
    
    for (i = 0; i < n - 1; i++) {
        maxIdx = i;
        
        for (j = i + 1; j < n; j++) {
            if (arr[j] > arr[maxIdx]) {
                maxIdx = j;
            }
        }
        
        temp = arr[maxIdx];
        arr[maxIdx] = arr[i];
        arr[i] = temp;
    }
}

int main() {
    int n, i;
    
    printf("Digite o n√∫mero de alunos: ");
    scanf("%d", &n);
    
    float notas[n];
    
    for (i = 0; i < n; i++) {
        printf("Digite a nota do aluno %d: ", i + 1);
        scanf("%f", &notas[i]);
    }
    
    selectionSort(notas, n);
    
    printf("Notas ordenadas em ordem decrescente:\n");
    for (i = 0; i < n; i++) {
        printf("%.2f ", notas[i]);
    }
    printf("\n");
    
    return 0;
}
